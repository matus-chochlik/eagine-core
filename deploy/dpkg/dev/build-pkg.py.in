import os
import json
import math
import shutil
# ------------------------------------------------------------------------------
src_dir = os.path.realpath("@SRC_DIR@")
bin_dir = os.path.realpath("@BIN_DIR@")
pkg_dir = os.path.realpath("@PKG_DIR@")
deb_dir  = os.path.join(pkg_dir, "DEBIAN")
pkg_prefix = os.path.join(pkg_dir, "usr")
cpp_prefix = os.path.join(pkg_prefix, "share", "eagine", "source", "@CMAKE_BUILD_TYPE@")
bin_prefix = os.path.join(pkg_prefix, "bin")
lib_prefix = os.path.join(pkg_prefix, "lib")
cmk_prefix = os.path.join(lib_prefix, "@PKG_MULTIARCH@", "cmake", "EAGine")

for path in [cpp_prefix, bin_prefix, lib_prefix, cmk_prefix, deb_dir]:
    if not os.path.exists(path):
        os.makedirs(path)
# ------------------------------------------------------------------------------
with open(os.path.join(cmk_prefix, "empty"), "wt") as empty:
    empty.write("")

shutil.copy2(
    os.path.join(bin_dir, "config", "EAGineConfig.cmake"),
    os.path.join(cmk_prefix))

shutil.copy2(
    os.path.join(src_dir, "config", "EAGineEmbedCommon.cmake"),
    os.path.join(cmk_prefix))

shutil.copy2(
    os.path.join(bin_dir, "config", "EAGineEmbed.cmake"),
    os.path.join(cmk_prefix))

shutil.copy2(
    os.path.join(src_dir, "config", "tools", "embed_generator"),
    os.path.join(bin_prefix, "eagine-embed_generator"))
# ------------------------------------------------------------------------------
with open(os.path.join("@CMAKE_CURRENT_BINARY_DIR@", "build-pkg.json"), "rb") as build_pkg_json:
    info = json.load(build_pkg_json)
    shutil.copy2(info["ryml_lib"], lib_prefix)
# ------------------------------------------------------------------------------
def copy_module_files(name, build_dir, info):
    for cppm in info["interfaces"]:
        dest = os.path.join(cpp_prefix, name, cppm)
        if not os.path.exists(os.path.dirname(dest)):
            os.makedirs(os.path.dirname(dest))
        shutil.copy2(os.path.join(build_dir, cppm), dest)
    for lib in info["libraries"]:
        shutil.copy2(os.path.join(build_dir, lib), lib_prefix)
    for cmake in info["cmakefiles"]:
        dest = os.path.join(cmk_prefix, "@CMAKE_BUILD_TYPE@", os.path.basename(cmake))
        if not os.path.exists(os.path.dirname(dest)):
            os.makedirs(os.path.dirname(dest))
        shutil.copy2(os.path.join(build_dir, cmake), dest)
    for subinfo in info["submodules"]:
        copy_module_files(name, build_dir, subinfo)

with open(os.path.join("@CMAKE_CURRENT_BINARY_DIR@", "eagine.core.json"), "rb") as module_json:
    info = json.load(module_json)
    copy_module_files("core", info["build_directory"], info["module"])
# ------------------------------------------------------------------------------
for cmake_file in ["module-std-opts.cmake"]:
    shutil.copy2(
        os.path.join("@CMAKE_CURRENT_SOURCE_DIR@", cmake_file),
        os.path.join(cmk_prefix, "@CMAKE_BUILD_TYPE@", cmake_file))
# ------------------------------------------------------------------------------
def dir_file_size(path):
    total_size = 0
    for dirpath, dirnames, filenames in os.walk(path):
        for d in dirnames:
            total_size += dir_file_size(os.path.join(dirpath, d))
        for f in filenames:
            total_size += os.path.getsize(os.path.join(dirpath, f))
    return total_size
# ------------------------------------------------------------------------------
with open(os.path.join(deb_dir, "control"), "wt") as control:
    control.write("""\
Package: eagine-core-dev
Version: %s
Architecture: %s
Installed-Size: %d
Depends: cmake,libsystemd-dev,zlib1g-dev
Suggests: ninja-build
Maintainer: Matus Chochlik <matus.chochlik@proton.me>
Description: Collection of various modern C++ utilities.
""" % (
    "@PKG_VERSION@",
    "@PKG_ARCH@",
    int(math.ceil(dir_file_size(pkg_dir) / 1024))
))
