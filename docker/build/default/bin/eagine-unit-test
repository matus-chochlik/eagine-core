"$(dirname ${0})/eagine-build" "${@}"

source ~/.local/bin/parse_args.sh
set -x

ctest \
	"--test-dir" "${HOME}/binary/eagine-${sub_module}" \
	"--parallel" "${parallel:-${cpu_count}}"
